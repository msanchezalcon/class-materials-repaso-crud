<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Editar {{name}}</h1>
        </div>

        <div class="col-md-6">

            <form action="/coasters/{{_id}}/edit" method="post">

                {{#with coaster}}
                <div class="form-group">
                    <label for="name-input">Nombre</label>
                    <input name="name" value="{{name}}" type="text" class="form-control" id="name-input">
                </div>
                <div class="form-group">
                    <label for="description-input">Descripci√≥n</label>
                    <input name="description" value="{{description}}" type="text" class="form-control"
                        id="description-input">
                </div>
                <div class="form-group">
                    <label for="inversions-input">Inversiones</label>
                    <input name="inversions" value="{{inversions}}" type="number" class="form-control"
                        id="inversions-input">
                </div>
                <div class="form-group">
                    <label for="length-input">Longitud</label>
                    <input name="length" value="{{length}}" type="number" class="form-control" id="length-input">
                </div>
                {{/with}}

                <div class="form-group">
                    <label for="park-list">Parque en el que se encuentra:</label>
                    <select name="park" class="form-control" id="park-list">
                        <option>Seleccionar</option>
                        {{#each park}}
                        <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Guardar cambios</button>
                <a href="/coasters" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>